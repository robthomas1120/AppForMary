<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#FFE4E1"> <!-- Set background color to light pink -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Mary"
            android:layout_gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            style="@style/GirlyText"
            android:textStyle="bold"
            android:textSize="30sp"/> <!-- Adjusted greeting text style -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/poemButton"
            android:text="100 Poems for Mary"
            style="@style/GirlyButton"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" /> <!-- Adjusted margin -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" /> <!-- Spacer -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sadButton"
            android:text="Feeling Sad ?"
            style="@style/GirlyButton"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" /> <!-- Adjusted margin -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" /> <!-- Spacer -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lonelyButton"
            android:text="Feeling Lonely ?"
            style="@style/GirlyButton"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" /> <!-- Adjusted margin -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" /> <!-- Spacer -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieButton"
            android:text="Movie Suggestions"
            style="@style/GirlyButton"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" /> <!-- Adjusted margin -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" /> <!-- Spacer -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seriesButton"
            android:text="Series Suggestions"
            style="@style/GirlyButton"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" /> <!-- Adjusted margin -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" /> <!-- Spacer -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/songButton"
            android:text="Random songs to listen to"
            style="@style/GirlyButton"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" /> <!-- Adjusted margin -->

    </LinearLayout>
</LinearLayout>
