<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4E1"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you ever feel lonely"
            android:paddingTop="20dp"
            android:textSize="30sp"
            android:paddingBottom="20dp"
            android:textStyle="bold"
            android:textColor="#FF4081"
            android:gravity="center"/> <!-- Center text horizontally -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/lonelyTitle"
            android:gravity="center"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FF4081"
            android:textStyle="bold" /> <!-- Center text horizontally -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lonely Page"
            android:id="@+id/lonelyID"
            android:gravity="center"
            android:paddingTop="20dp"
            android:textSize="30sp"
            android:paddingBottom="20dp"
            android:textStyle="italic"
            android:textColor="#FF4081" /> <!-- Center text horizontally -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/randomLonelyButton"
            android:text="randomize"
            android:textSize="30sp"
            style="@style/GirlyButton"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"/> <!-- Center text horizontally -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeButtonLonely"
            android:text="home"
            android:textSize="30sp"
            style="@style/GirlyButton"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center"/> <!-- Center text horizontally -->

    </LinearLayout>

</LinearLayout>
