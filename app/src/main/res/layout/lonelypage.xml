<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE4E1"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you ever feel lonely"
            android:paddingTop="20dp"
            android:textSize="30sp"
            android:paddingBottom="20dp"
            android:textStyle="bold"
            android:textColor="#FF4081"
            android:gravity="center"/> <!-- Center text horizontally -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lonelyTitle"
            android:text="Title"
            android:gravity="center"
            android:textSize="30sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textColor="#FF4081" /> <!-- Center text horizontally -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lonelyID"
            android:text="Lonely Page"
            android:gravity="center"
            android:paddingTop="20dp"
            android:textSize="30sp"
            android:paddingBottom="20dp"
            android:textStyle="italic"
            android:textColor="#FF4081" /> <!-- Center text horizontally -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/randomLonelyButton"
                android:src="@drawable/shuffle"
                android:background="?android:attr/selectableItemBackground"
                android:paddingEnd="20dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homeButtonLonely"
                android:src="@drawable/home"
                android:background="?android:attr/selectableItemBackground"
                android:paddingStart="20dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
